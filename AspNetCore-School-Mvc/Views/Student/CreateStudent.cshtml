@model AspNetCore_School_Mvc.Models.StudentViewModel

@{
    ViewData["Title"] = "CreateStudent";
}

<h1>CreateStudent</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateStudent" asp-controller="Student" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ClassId" class="form-control"  type="hidden"/>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SurName" class="control-label"></label>
                <input asp-for="SurName" class="form-control" />
                <span asp-validation-for="SurName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SchoolNo" class="control-label"></label>
                <input asp-for="SchoolNo" class="form-control" />
                <span asp-validation-for="SchoolNo" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

